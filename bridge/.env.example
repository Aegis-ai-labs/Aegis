# AEGIS1 Bridge Server Configuration
# Copy this file to .env and fill in your values

# Claude API (REQUIRED)
ANTHROPIC_API_KEY=your_api_key_here

# Claude Models (Haiku for fast responses, Opus for deep thinking)
CLAUDE_HAIKU_MODEL=claude-haiku-4-5-20251001
CLAUDE_OPUS_MODEL=claude-opus-4-6
CLAUDE_MAX_TOKENS=300

# Bridge Server
BRIDGE_HOST=0.0.0.0
BRIDGE_PORT=8000

# Audio Settings (16kHz, 16-bit mono PCM)
SAMPLE_RATE=16000
CHUNK_SIZE_MS=200
MAX_RECORDING_TIME_MS=10000
SILENCE_THRESHOLD=500
SILENCE_CHUNKS_TO_STOP=8

# STT (faster-whisper) — runs locally, no API key needed
STT_MODEL=base
STT_DEVICE=cpu
STT_LANGUAGE=en
STT_BEAM_SIZE=1

# TTS (Piper) — runs locally, no API key needed
TTS_MODEL=en_US-lessac-medium
TTS_SPEAKER_ID=0

# Database
DB_PATH=aegis1.db

# Logging
LOG_LEVEL=INFO
