# AEGIS1 Bridge Server Configuration

# Claude API (required)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Model selection
CLAUDE_HAIKU_MODEL=claude-haiku-4-5-20251001
CLAUDE_OPUS_MODEL=claude-opus-4-6
CLAUDE_MAX_TOKENS=300

# Bridge server
BRIDGE_HOST=0.0.0.0
BRIDGE_PORT=8000

# Audio config
SAMPLE_RATE=16000

# STT (faster-whisper) — runs locally, no API key needed
STT_MODEL=base
STT_DEVICE=cpu
STT_LANGUAGE=en

# TTS (Piper) — runs locally, no API key needed
PIPER_MODEL_PATH=
PIPER_CONFIG_PATH=

# Database
DB_PATH=aegis1.db

# Logging
LOG_LEVEL=INFO
