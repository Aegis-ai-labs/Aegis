# AEGIS1 Bridge Server Configuration (Phase 3.2)
# Copy this file to .env and fill in your values

# Claude API (REQUIRED)
ANTHROPIC_API_KEY=your_api_key_here

# Claude Models (Haiku for fast responses, Opus for deep thinking)
CLAUDE_HAIKU_MODEL=claude-haiku-4-5-20251001
CLAUDE_OPUS_MODEL=claude-opus-4-6
CLAUDE_MAX_TOKENS=300

# Bridge Server
BRIDGE_HOST=0.0.0.0
BRIDGE_PORT=8000

# Audio Settings (16kHz, 16-bit mono PCM)
SAMPLE_RATE=16000
CHUNK_SIZE_MS=200
MAX_RECORDING_TIME_MS=10000

# STT Engine — Moonshine Streaming Tiny (primary), faster-whisper (fallback)
STT_ENGINE=moonshine
STT_MODEL=moonshine/tiny
STT_LANGUAGE=en

# TTS Engine — Kokoro (primary), Piper (fallback)
TTS_ENGINE=kokoro
TTS_KOKORO_VOICE=af_heart
TTS_PIPER_MODEL=en_US-lessac-medium

# VAD (Voice Activity Detection) — Silero
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_MS=250
VAD_SILENCE_MS=700

# Local LLM — Phi-3-mini via Ollama (for fast responses on edge)
LOCAL_LLM_ENABLED=true
LOCAL_LLM_MODEL=phi3:mini
LOCAL_LLM_URL=http://localhost:11434

# Intent Router (complexity threshold: <0.5 = local LLM, >0.5 = Claude)
ROUTER_COMPLEXITY_THRESHOLD=0.5

# Memory — sqlite-vec (conversation recall)
MEMORY_ENABLED=true
MEMORY_DB_PATH=aegis1_memory.db
MEMORY_MAX_RESULTS=5

# Database
DB_PATH=aegis1.db

# ADPCM Audio Compression (4x compression for ESP32)
USE_ADPCM=true

# Logging
LOG_LEVEL=INFO
